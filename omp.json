{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "foreground": "#98C379",
            "properties": {
              "style": "folder"
            },
            "style": "plain",
            "template": " ",
            "type": "text"
          },
          {
            "type": "python",
            "style": "plain",
            "foreground": "#98C379",
            "properties": {
              "display_virtual_env": true,
              "display_version": false
            }
          },
          {
            "foreground": "#56B6C2",
            "properties": {
              "style": "folder"
            },
            "style": "plain",
            "template": " {{ .Path }} ",
            "type": "path"
          },
          {
            "foreground": "#D0666F",
            "properties": {
              "branch_icon": ""
            },
            "style": "plain",
            "template": "<#5FAAE8>git:(</>{{ .HEAD }}<#5FAAE8>)</>",
            "type": "git"
          },
          {
            "foreground": "#BF616A",
            "style": "plain",
            "template": " ✗",
            "type": "exit"
          },
          {
            "foreground": "#98C379",
            "style": "plain",
            "template": " ➜",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 2
  }
  